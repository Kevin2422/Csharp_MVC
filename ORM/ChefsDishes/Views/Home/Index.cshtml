    <tr>
        <th>Name</th>
        <th>Age</th>
        <th># of Dishes</th>
    </tr>
</thead>
@foreach (var chef in ViewBag.Chefs)
{
    <tr>
        <td>@chef.FirstName @chef.LastName</td>
        @* @{TimeSpan result = DateTime.Now.Subtract(@chef.Birthday)/365;
        double results = Math.Floor(result.TotalDays);} *@
    

@{DateTime birth = chef.Birthday;
DateTime today = DateTime.Today;


// Calculate the age.
var age = today.Year - birth.Year;

// Go back to the year in which the person was born in case of a leap year
if (birth.Date > today.AddYears(-age)) age--;

        <td>@age</td>
        }
        <td>@chef.dishes.Count</td>
    </tr>
}
</table>